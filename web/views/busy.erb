<section>
  <h2><%= t('Status') %></h2>

  <div class="grid">
    <article>
      <h3><%= s = processes.size; number_with_delimiter(s) %></h3>
      <footer><%= t('Processes') %></footer>
    </article>
    <article>
      <h3><%= x = processes.total_concurrency; number_with_delimiter(x) %></h3>
      <footer><%= t('Threads') %></footer>
    </article>
    <article>
      <h3><%= ws = workset.size; number_with_delimiter(ws) %></h3>
      <footer><%= t('Busy') %></footer>
    </article>
    <article>
      <h3><%= x == 0 ? 0 : ((ws / x.to_f) * 100).round(0) %>%</h3>
      <footer><%= t('Utilization') %></footer>
    </article>
    <article>
      <h3 dir="ltr"><%= format_memory(processes.total_rss) %></h3>
      <footer><%= t('RSS') %></footer>
    </article>
  </div>
</section>

<section>
  <div class="grid">
    <h2><%= t('Processes') %></h2>
    <div><!-- spacer --></div>
    <form method="post">
      <%= csrf_tag %>
      <fieldset class="grid">
        <input class="danger" type="submit" name="quiet" value="<%= t('QuietAll') %>" data-confirm="<%= t('AreYouSure') %>"/>
        <input class="danger" type="submit" name="stop" value="<%= t('StopAll') %>" data-confirm="<%= t('AreYouSure') %>"/>
      </fieldset>
    </form>
  </div>

  <table class="striped">
    <thead>
      <th><%= t('Name') %></th>
      <th><%= t('Started') %></th>
      <th><%= t('RSS') %> <a target="blank" href="https://github.com/sidekiq/sidekiq/wiki/Memory#rss"><pill class="primary" title="Click to learn more about RSS">?Ô∏è</pill></a></th>
      <th><%= t('Threads') %></th>
      <th><%= t('Busy') %></th>
      <th>&nbsp;</th>
    </thead>
    <% lead = processes.leader %>
    <% sorted_processes.each do |process| %>
      <tr>
        <td>
          <%= "#{process['hostname']}:#{process['pid']}" %>
          <% if process.tag != "" %>
            <pill class="primary"><%= process.tag %></pill>
          <% end %>
          <% process.labels.each do |label| %>
            <pill class="contrast"><%= label %></pill>
          <% end %>
          <% if process.embedded? %>
            <pill class="muted">embedded</pill>
          <% end %>
          <% if process.stopping? %>
            <pill class="muted">quiet</pill>
          <% end %>
          <% if process.identity == lead %>
            <pill class="contrast">leader</pill>
          <% end %>
          <br>
          <b><%= "#{t('Queues')}: " %></b>
          <% if process.weights %>
            <%= busy_weights(process.weights) %>
          <% else %>
            <%= process.queues.sort.join(", ") %>
          <% end %>
          <% if process.version != Sidekiq::VERSION %>
            <br>
            <b><%= "#{t('Version')}: " %></b>
            <% if process.version %>
              <%= process.version %>
            <% else %>
              <%= t('Unknown') %>
            <% end %>
          <% end %>
        </td>
        <td><%= relative_time(Time.at(process['started_at'])) %></td>
        <td class="num" dir="ltr"><%= format_memory(process['rss'].to_i) %></td>
        <td class="num"><%= number_with_delimiter(process['concurrency']) %></td>
        <td class="num"><%= number_with_delimiter(process['busy']) %></td>
        <td>
          <% unless process.embedded? %>
            <form method="POST">
              <%= csrf_tag %>
              <input type="hidden" name="identity" value="<%= process['identity'] %>"/>
              <fieldset class="grid">
                <% unless process.stopping? %><button type="submit" name="quiet" value="1"><%= t('Quiet') %></button><% end %>
                <button class="danger" type="submit" name="stop" value="1"><%= t('Stop') %></button>
              </fieldset>
            </form>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<section>

<section>
  <div class="grid">
    <h2><%= t('Jobs') %></h2>
    <% if @workset.size > 0 && @total_size > @count %>
      <%= erb :_paging, locals: { url: "#{root_path}busy" } %>
    <% end %>
  </div>

  <table class="striped">
    <thead>
      <th><%= t('Process') %></th>
      <th><%= t('TID') %></th>
      <th><%= t('JID') %></th>
      <th><%= t('Queue') %></th>
      <th><%= t('Job') %></th>
      <th><%= t('Arguments') %></th>
      <th><%= t('Started') %></th>
    </thead>
    <% @workset.each do |process, thread, work| %>
      <% job = work.job %>
      <tr>
        <td><%= process %></td>
        <td><%= thread %></td>
        <td><%= job.jid %></td>
        <td>
          <a href="<%= root_path %>queues/<%= work.queue %>"><%= work.queue %></a>
        </td>
        <td>
          <%= job.display_class %>
          <%= display_tags(job, nil) %>
        </td>
        <td>
          <code><%= display_args(job.display_args) %></code>
        </td>
        <td><%= relative_time(work.run_at) %></td>
      </tr>
    <% end %>
  </table>
<section>
