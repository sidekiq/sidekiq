<div class="navbar navbar-expand-md navbar-light bg-light fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%= root_path %>">
      <%= Sidekiq::NAME %>
      <%= erb :_status %>
    </a>
    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar-menu">
      <ul class="navbar-nav">
        <% Sidekiq::Web.default_tabs.each do |title, url| %>
          <% if url == '' %>
            <li class="<%= current_path == url ? 'active' : '' %> nav-item">
            <a href="<%= root_path %><%= url %>" class="nav-link"><%= t(title) %></a>
            </li>
          <% else %>
            <li class="<%= current_path.start_with?(url) ? 'active' : '' %> nav-item">
            <a href="<%= root_path %><%= url %>" class="nav-link"><%= t(title) %></a>
            </li>
          <% end %>
        <% end %>

        <% Sidekiq::Web.custom_tabs.each do |title, url| %>
          <li class="<%= current_path.start_with?(url) ? 'active' : '' %> nav-item" data-navbar="custom-tab">
            <a href="<%= root_path %><%= url %>" class="nav-link"><%= t(title) %></a>
          </li>
        <% end %>

      </ul>
        <div class="nav-text navbar-livereload">
          <div class="poll-wrapper">
            <%= erb :_poll_link %>
            <% if Sidekiq::Web.app_url %>
              <a class="btn btn-inverse" href="<%= Sidekiq::Web.app_url %>"><%= t('BackToApp') %></a>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
