<%= erb :_job_info, locals: { job: @job, type: :scheduled } %>

<div class="grid">
  <a href="<%= root_path %>scheduled"><%= t('GoBack') %></a>
  <div><!-- spacer --></div>
  <form action="<%= root_path %>scheduled/<%= job_params(@job, @job.score) %>" method="post">
    <%= csrf_tag %>
    <fieldset class="grid">
      <input type="submit" name="add_to_queue" value="<%= t('AddToQueue') %>" />
      <input class="danger" type="submit" name="delete" value="<%= t('Delete') %>" />
    </fieldset>
  </form>
</div>
