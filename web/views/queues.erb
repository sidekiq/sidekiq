<section>
  <h1><%= t('Queues') %></h1>

  <table class="striped">
    <thead>
      <th><%= t('Queue') %></th>
      <th><%= t('Size') %></th>
      <th><%= t('Latency') %></th>
      <th><%= t('Actions') %></th>
    </thead>
    <% @queues.each do |queue| %>
      <tr>
        <td>
          <a href="<%= root_path %>queues/<%= CGI.escape(queue.name) %>"><%= h queue.name %></a>
          <% if queue.paused? %>
            <pill class="primary"><%= t('Paused') %></pill>
          <% end %>
        </td>
        <td class="num"><%= number_with_delimiter(queue.size) %> </td>
        <td class="num">
          <% queue_latency = queue.latency %>
          <%= (queue_latency < 60) ? '' : " (#{relative_time(Time.at(Time.now.to_f - queue_latency))})" %>
          <%= number_with_delimiter(queue_latency, precision: 2) %>
        </td>
        <td>
          <form action="<%=root_path %>queues/<%= CGI.escape(queue.name) %>" method="post">
            <%= csrf_tag %>
            <fieldset class="grid">
              <input class="danger" type="submit" name="delete" title="This will delete all jobs within the queue, it will reappear if you push more jobs to it in the future." value="<%= t('Delete') %>" data-confirm="<%= t('AreYouSureDeleteQueue', :queue => h(queue.name)) %>" />

              <% if Sidekiq.pro? %>
                <% if queue.paused? %>
                  <input type="submit" name="unpause" value="<%= t('Unpause') %>" />
                <% else %>
                  <input type="submit" name="pause" value="<%= t('Pause') %>" />
                <% end %>
              <% end %>
            </fieldset>
          </form>
        </td>
      </tr>
    <% end %>
  </table>
</section>
