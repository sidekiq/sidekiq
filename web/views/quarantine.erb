<section>
  <header>
    <h1><%= t('QuarantineJobs') %></h1>
    <%= filtering('quarantine') %>
  </header>

  <% if @quarantine.size > 0 %>
    <form action="<%= root_path %>quarantine" method="post">
      <%= csrf_tag %>
      <div class="table_container">
        <table>
          <thead>
            <tr>
              <th>
                <label>
                  <input type="checkbox" class="check_all" />
                </label>
              </th>
              <th><%= t('Job') %></th>
              <th><%= t('Arguments') %></th>
              <th><%= t('Queue') %></th>
              <th><%= t('QuarantinedAt') %></th>
              <th><%= t('Error') %></th>
            </tr>
          </thead>
          <% @quarantine.each do |entry| %>
            <tr>
              <td>
                <label>
                  <input type='checkbox' name='key[]' value='<%= job_params(entry.item, entry.score) %>' class='shift_clickable' />
                </label>
              </td>
              <td>
                <%= entry.display_class %>
              </td>
              <td>
                <code>
                  <div class="args"><%= display_args(entry.display_args) %></div>
                </code>
              </td>
              <td>
                <a href="<%= root_path %>queues/<%= entry.queue %>"><%= entry.queue %></a>
              </td>
              <td>
                <%= entry.item["quarantined_at"] ? relative_time(Time.at(entry.item["quarantined_at"] / 1000.0)) : 'Unknown' %>
              </td>
              <td>
                <div><a href="<%= root_path %>retries/<%= job_params(entry.item, entry.score) %>"><%= h truncate("#{entry['error_class']}: #{entry['error_message']}", 200) %></a></div>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="buttons-row">
        <input class="btn btn-primary" type="submit" name="retry" value="<%= t('RetryNow') %>" />
        <input class="btn btn-danger" type="submit" name="delete" value="<%= t('Delete') %>" />
        <input class="btn btn-danger" type="submit" name="kill" value="<%= t('Kill') %>" />
      </div>
    </form>
    
  <% else %>
    <div class="alert alert-success"><%= t('NoQuarantineFound') %></div>
  <% end %>
</section>
